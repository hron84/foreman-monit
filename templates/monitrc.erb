check process <%= @app %>-<%= name %> with pidfile <%= pid_file(name) %>
<%- if @rubyver %>
  start program = "<%= @sudo_opts %> -u <%= @user %> <%= @bash %> -c 'cd <%= base_dir %> && <%= rvm_prefix %> /usr/bin/env PORT=<%= port %> PID_FILE=<%= pid_file(name) %> RAILS_ENV=<%= rails_env %> <%= process.command %> >> <%= log_file(name) %> 2>&1 &'" with timeout 180 seconds
<%- else %>
    start program "<%= @su %> <%= @user %> -l -c '<%= chruby_init %> cd <%= base_dir %>; /usr/bin/env PORT=<%= port %> PID_FILE=<%= pid_file(name) %> RAILS_ENV=<%= rails_env %> <%= process.command %> >> <%= log_file(name) %> 2>&1 &'" with timeout 180 seconds
<%- end %>
  stop program = "<%= @bash %> -c 'kill -SIGKILL `cat <%= pid_file(name) %>` && rm <%= pid_file(name) %>'"
  group <%= @app %>

